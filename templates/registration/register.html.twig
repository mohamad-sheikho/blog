{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}

    <form method="post" style="width: 500px; margin-left: auto; margin-right: auto;">
    {# {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
    
    <h1 class="h3 mb-3 mt-3 font-weight-normal">Veuillez vous inscrire</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary mt-2">S'inscrire</button>
    {{ form_end(registrationForm) }} 
{% endblock %}


